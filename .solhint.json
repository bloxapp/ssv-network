{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "comprehensive-interface": "warn",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "ordering": "warn",
    "mark-callable-contracts": "off",
    "compiler-version": "off",
    "not-rely-on-time": "off"
  }
}